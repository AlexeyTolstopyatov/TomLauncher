<ui:FluentWindow x:Class="TomLauncher.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:pages="clr-namespace:TomLauncher.View.Pages"
        mc:Ignorable="d"
        Title="{DynamicResource WndMain}"
        Height="800" Width="1200">
    
    <!-- PaneDisplayMode="enum" -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ui:TitleBar 
            Title="{DynamicResource WndMain}"/>
        <ui:NavigationView
            x:Name="MainNavigationView"
            Loaded="MainNavigationViewOnLoaded"
            PaneDisplayMode="Left"
            Grid.Row="1"
            VerticalContentAlignment="Top"
            Padding="20"
            IsBackButtonVisible="Visible"
            IsTopSeparatorVisible="False"
            Transition="FadeIn">
            
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                    TargetPageType="{x:Type pages:PreviewPage}"
                    Icon="{ui:SymbolIcon Box16}"
                    Content="{DynamicResource NvgGamePreview}">
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    Content="{DynamicResource NvgPackEditor}"
                    Icon="{ui:SymbolIcon BoxEdit20}"
                    TargetPageType="{x:Type pages:EditorPage}">
                </ui:NavigationViewItem>
                <ui:NavigationViewItem
                    Content="{DynamicResource NvgModPreview}"
                    TargetPageType="{x:Type pages:ModPreviewPage}"
                    Icon="{ui:SymbolIcon Archive16}">
                    
                </ui:NavigationViewItem>
            </ui:NavigationView.MenuItems>
        </ui:NavigationView>
    </Grid>
</ui:FluentWindow>
