<ui:FluentWindow x:Class="TomLauncher.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:pages="clr-namespace:TomLauncher.View.Pages"
        mc:Ignorable="d"
        ExtendsContentIntoTitleBar="True"
        Title="{DynamicResource WndMain}"
        Height="800" Width="1200">
    
    <!-- PaneDisplayMode="enum" -->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ui:TitleBar 
            Title="{DynamicResource WndMain}"/>
        <ui:NavigationView
            x:Name="MainNavigationView"
            IsPaneOpen="True"
            OpenPaneLength="200"
            PaneTitle="{DynamicResource WndMain}"
            Loaded="MainNavigationViewOnLoaded"
            PaneDisplayMode="Left"
            VerticalContentAlignment="Top"
            IsBackButtonVisible="Visible"
            IsTopSeparatorVisible="False"
            Grid.Row="1"
            Transition="FadeInWithSlide">
            
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                    TargetPageType="{x:Type pages:PreviewPage}"
                    Icon="{ui:SymbolIcon Box16}"
                    Content="{DynamicResource NvgGamePreview}"/>
                <ui:NavigationViewItem
                    Content="{DynamicResource NvgPackEditor}"
                    Icon="{ui:SymbolIcon BoxEdit20}"
                    TargetPageType="{x:Type pages:EditorPage}"/>
                <ui:NavigationViewItem
                    Content="{DynamicResource NvgModPreview}"
                    TargetPageType="{x:Type pages:ModPreviewPage}"
                    Icon="{ui:SymbolIcon PuzzlePiece16}"/>
            </ui:NavigationView.MenuItems>
            
            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem
                    TargetPageType="{x:Type pages:SettingsPage}"
                    Icon="{ui:SymbolIcon Settings16}"
                    Content="{DynamicResource WndMain}"/>
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>
    </Grid>
</ui:FluentWindow>
