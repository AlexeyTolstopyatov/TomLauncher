<ui:FluentWindow x:Class="TomLauncher.View.Windows.MetadataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TomLauncher.ViewModel.Windows"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="MetadataWindow" 
        Height="450" Width="800">
    <Window.DataContext>
        <local:MetadataViewModel/>
    </Window.DataContext>
    <StackPanel>
        <ui:TitleBar
            Icon="{ui:SymbolIcon List16}"
            Title="Metadata"/>
        <TabControl
            d:ItemsSource="{d:SampleData 10}"
            ItemsSource="{Binding Manifests}">
            <TabControl.ItemTemplate>
                <DataTemplate>
                    <TabItem
                        Header="{Binding Key}">
                        <ui:Card
                            Padding="20">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <StackPanel>
                                    
                                </StackPanel>
                                
                                <StackPanel
                                    Grid.Column="1">
                                    
                                </StackPanel>
                            </Grid>
                        </ui:Card>
                    </TabItem>
                </DataTemplate>
            </TabControl.ItemTemplate>
        </TabControl>
    </StackPanel>
</ui:FluentWindow>
