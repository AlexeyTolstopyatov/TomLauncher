<ui:FluentWindow x:Class="TomLauncher.View.Windows.FirstWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TomLauncher.ViewModel.Windows"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        mc:Ignorable="d"
        Title="FirstWindow" 
        SizeToContent="Height"
        Height="Auto" Width="600">
    <ui:FluentWindow.DataContext>
        <local:FirstViewModel/>
    </ui:FluentWindow.DataContext>
    <StackPanel>
        <ui:TitleBar
            Title="{DynamicResource WndMain}"
            Icon="{ui:SymbolIcon Settings16}"/>
        <ui:Card>
            <StackPanel>
                <ui:CardControl
                    Opacity="0.8"
                    Margin="0,10"
                    Background="DarkCyan"
                    Foreground="Aqua"
                    Icon="{ui:SymbolIcon Info16}">
                    <ui:CardControl.Header>
                        <StackPanel>
                            <TextBlock
                                TextWrapping="Wrap">
                                <Run Text="{DynamicResource FstWelcomeText}"/>
                            </TextBlock>
                        </StackPanel>
                    </ui:CardControl.Header>
                </ui:CardControl>
                
                <ui:Card>
                    <StackPanel>
                        <Label
                            Content="{DynamicResource FstLanguageList}"/>
                        <ComboBox
                            x:Name="LanguageBox"
                            SelectedIndex="{Binding Model.CurrentLanguage}"
                            ItemsSource="{Binding Model.Languages}"/>
                        
                        <ui:CardControl
                            Background="DarkCyan"
                            Foreground="Aqua"
                            Opacity="0.8"
                            Margin="0,10"
                            Icon="{ui:SymbolIcon Warning16}">
                            <ui:CardControl.Header>
                                <TextBlock
                                    TextWrapping="WrapWithOverflow"
                                    Text="{DynamicResource FstHelpText}"/>
                            </ui:CardControl.Header>
                        </ui:CardControl>
                        
                        <Label
                            Content="{DynamicResource FstGameLocation}"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="75"/>
                            </Grid.ColumnDefinitions>
                            <TextBox
                                x:Name="GameLocation"
                                Text="{Binding Model.GameLocation}"/>
                            <ui:Button
                                Content="{DynamicResource Browse}"
                                Command="{Binding BrowseCommand}"
                                Grid.Column="1">
                            </ui:Button>
                        </Grid>
                    </StackPanel>
                </ui:Card>
                <ui:Button
                    Click="DoneButtonOnClick"
                    Margin="0, 10"
                    Width="200"
                    Appearance="Primary"
                    Content="{DynamicResource Apply}"/>
            </StackPanel>
        </ui:Card>
    </StackPanel>
</ui:FluentWindow>
